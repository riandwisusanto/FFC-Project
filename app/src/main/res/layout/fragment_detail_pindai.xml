<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_bg_yellow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/titleDetail"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="PATHIL LELE"
            android:textColor="@color/colorFont"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/deskripsiDetail"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Pathil lele adalah"
            android:textColor="@color/colorFont"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnVideo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/video"
        app:layout_constraintTop_toBottomOf="@id/lin"
        app:layout_constraintRight_toLeftOf="@id/btnSejarah"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtVideo"
        android:text="Video"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnVideo"
        app:layout_constraintRight_toLeftOf="@id/btnSejarah"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/btnSejarah"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sejarah"
        app:layout_constraintTop_toBottomOf="@id/lin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnVideo"
        />

    <TextView
        android:id="@+id/txtSejarah"
        android:text="Sejarah"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnSejarah"
        app:layout_constraintLeft_toRightOf="@id/btnVideo"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/btnPeraturan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/peraturan"
        app:layout_constraintTop_toBottomOf="@id/txtVideo"
        app:layout_constraintRight_toLeftOf="@id/btnSejarah"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/txtPeraturan"
        android:text="Peraturan"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnPeraturan"
        app:layout_constraintRight_toLeftOf="@id/btnPertandingan"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/btnPertandingan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/pertandingan"
        app:layout_constraintTop_toBottomOf="@id/txtVideo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnVideo"
        />

    <TextView
        android:id="@+id/txtPertandingan"
        android:text="Pertandingan"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnPertandingan"
        app:layout_constraintLeft_toRightOf="@id/btnPeraturan"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>