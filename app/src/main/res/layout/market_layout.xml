<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageButton
        android:id="@+id/close"
        android:background="@drawable/ic_baseline_close_24"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/wa"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/wa"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/shopee"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/shopee"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shopee"
            app:layout_constraintLeft_toRightOf="@id/wa"
            app:layout_constraintRight_toLeftOf="@id/tokopedia"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/tokopedia"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/tokopedia"
            app:layout_constraintLeft_toRightOf="@id/shopee"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>